<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/str_orderby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Ordenar por" />

    <TextView
        android:id="@+id/str_orderby_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/str_orderby"
        android:layout_marginStart="10dp"
        android:text="Preço" />

    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/switch_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/str_orderby_price"
        android:padding="8dp"
        app:strokeRadius="5dp"
        app:strokeWidth="1dp"
        app:selectedTab="0"
        app:selectedColor="#eb7b00"
        app:textSize="14sp" />

    <TextView
        android:id="@+id/str_orderby_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_price"
        android:layout_marginStart="10dp"
        android:text="Data" />

    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/switch_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/str_orderby_date"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        app:strokeRadius="5dp"
        app:strokeWidth="1dp"
        app:selectedTab="0"
        app:selectedColor="#eb7b00"
        app:textSize="14sp" />

    <TextView
        android:id="@+id/str_orderby_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_date"
        android:layout_marginStart="10dp"
        android:text="Categoria" />

    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/switch_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/str_orderby_cat"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="8dp"
        app:strokeRadius="5dp"
        app:strokeWidth="1dp"
        app:selectedTab="0"
        app:selectedColor="#eb7b00"
        app:textSize="14sp" />

    <TextView
        android:id="@+id/str_orderby_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch_cat"
        android:layout_marginStart="10dp"
        android:text="Localização" />

    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/switch_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/str_orderby_location"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="8dp"
        app:strokeRadius="5dp"
        app:strokeWidth="1dp"
        app:selectedTab="0"
        app:selectedColor="#eb7b00"
        app:textSize="14sp" />
</RelativeLayout>